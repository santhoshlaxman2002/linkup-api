{
  "name": "linkup-api",
  "version": "1.0.0",
  "description": "Backend API for Linkup - A social media platform",
  "main": "dist/server.js",
  "scripts": {
    "dev": "ts-node src/seeder.ts && nodemon src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "clean": "rimraf dist",
    "migrate": "node dist/seeder.js",
    "prebuild": "npm run clean",
    "prestart": "npm run migrate"
  },
  "keywords": [
    "social media",
    "api",
    "posts",
    "chat",
    "express",
    "typescript",
    "postgresql"
